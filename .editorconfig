#----------------------------------------------------------------------
# EditorConfig
# @url http://editorconfig.org/
#----------------------------------------------------------------------
root = true

#----------------------------------------------------------------------
# 基本設定
#----------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

#----------------------------------------------------------------------
# TypeScript
#----------------------------------------------------------------------
[*.{ts,js}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

#----------------------------------------------------------------------
# Markdown
#----------------------------------------------------------------------
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

